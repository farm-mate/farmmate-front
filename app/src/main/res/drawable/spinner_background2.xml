<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 투명한 배경 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#808080" />
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- 드롭다운 아이콘을 배치할 위치 -->
    <item android:gravity="center_vertical|right" android:left="10dp">
        <!-- 드롭다운 아이콘 -->
        <layer-list>
            <item  android:gravity="right" android:width="25dp" android:height="20dp" >
                <bitmap android:src="@drawable/down_arrow"/>
            </item>
        </layer-list>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭되지 않은 상태 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 내부 색상을 투명으로 설정 -->
            <stroke
                android:width="2dp"
                android:color="#66AC5A" /> <!-- 테두리 색상 -->
            <corners android:radius="20dp" /> <!-- 모서리 둥글게 설정 -->
        </shape>
    </item>
    <!-- 클릭된 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66AC5A" /> <!-- 클릭된 상태일 때 내부 색상을 테두리 색상과 동일하게 설정 -->
            <stroke
                android:width="2dp"
                android:color="#66AC5A" />
            <corners android:radius="20dp" /> <!-- 모서리 둥글게 설정 -->
        </shape>
    </item>
</selector>
